services:
  oracledb:
    image: gvenzl/oracle-xe:21.3.0-slim
    container_name: oracledb
    environment:
      - ORACLE_PASSWORD=<suasSenha>
      - APP_USER=<seuId>
      - APP_USER_PASSWORD=<suasSenha>
    ports:
      - "1521:1521"
    volumes:
      - oracle-data:/opt/oracle/oradata

  api:
    image: joaopcancian/global-api:v2
    container_name: dotnetapi
    environment:
      - ASPNETCORE_ENVIRONMENT=Development
      - ConnectionStrings__DefaultConnection=User Id=<seuId>;Password=<suasSenha>;Data Source=oracledb:1521/XEPDB1
    ports:
      - "8080:8080"
    depends_on:
      - oracledb

volumes:
  oracle-data:
